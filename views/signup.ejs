<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <%- include('./components/head')%>
  </head>
  <body>
    <%- include('./components/nav')%>

    <section id="cadastro">
      <h2>Anuncie</h2>
      <form action="/create" method="post">
        <label for="nome" class="label">Modelo e Ano da motocicleta:</label>
        <input
          type="text"
          id="nome"
          name="nome"
          class="text-input"
          autocomplete="off"
          placeholder="Digite o modelo/ano da motocicleta"
        />

        <label for="descricao">Descrição:</label>
        <input
          type="text"
          id="descricao"
          name="descricao"
          class="text-input"
          autocomplete="off"
          placeholder="Insira a descrição"
        />

        <label for="tipo" class="label">Preço R$:</label>
        <input
          type="text"
          id="tipo"
          name="tipo"
          class="text-input"
          autocomplete="off"
          placeholder="Digite o ano da motocicleta"
        />

        <label for="imagem" class="label">Link da Imagem</label>
        <input
          type="text"
          id="imagem"
          name="imagem"
          class="text-input"
          autocomplete="off"
          placeholder="Insira o link da imagem"
        />

        <button id="btnCadastrar" type="submit">Anunciar</button>
      </form>
    </section>
  </body>
</html>
